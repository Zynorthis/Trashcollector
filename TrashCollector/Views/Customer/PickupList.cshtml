@model IEnumerable<TrashCollector.Models.Pickups>

@{
    ViewBag.Title = "PickupList";
}

<h2>List of all current scheduled pickups</h2>

<p>
    @Html.ActionLink("Schedule Extra Pickup", "Create")
</p>
@if (Model != null)
{
    <table class="table"></table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.Zipcode)
        </th>
        <th></th>
    </tr>

    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PickupDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Zipcode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
}
else
{
    <h3 class="text-danger"> No Pickups Currently Scheduled. </h3>
}
