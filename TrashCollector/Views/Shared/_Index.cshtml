@model TrashCollector.Models.ViewModel
@{
    ViewBag.Title = "Welcome Page";
}
<body>
    <center>
        @if (ViewBag.displayMenu == "Admin")
        {
            <h1 class="text-success"> Admin Login Successful </h1>
            <h3> Welcome. </h3>
            <hr />

            <h4> Manage Roles Below </h4>
            <div class="row">
                @Html.ActionLink("Home", "_Index", "Trash", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Roles (Coming Soon)", "_Index", "Trash", new { area = "" }, new { @class = "btn btn-default" })
            </div>
        }
        else if (ViewBag.displayMenu == "Employee")
        {
            <h1 class="text-success"> Employee Login Successful </h1>
            <h3> Welcome </h3>
            <hr />

            <h4> Select what it is you'd like to do. </h4>
            <div class="row">
                @Html.ActionLink("Home", "_Index", "Trash", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Pickups", "DisplayPickups", "Employee", new { area = "" }, new { @class = "btn btn-default" }) @*Display all pickups here*@
                @Html.ActionLink("Customer Location", "Map", "Employee", new { area = "" }, new { @class = "btn btn-default" })
            </div>
        }
        else if (ViewBag.displayMenu == "Customer")
        {
            <h1 class="text-success"> Customer Login Successful</h1>
            <h2> Welcome </h2>
            <hr />

            <h4> Select what it is you'd like to do. </h4>
            <br />
            <div class="row">
                @Html.ActionLink("Home", "_Index", "Trash", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("List of Pickups", "List", "Customer", new { area = "" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Extra Pickups", "Create", "Customer", new { area = "" }, new { @class = "btn btn-default" })
            </div>
        }
        else
        {
            <h1 class="text-success"> Login Successful </h1>
            <hr />

            <h3 class="text-danger"> Role not assigned, contact your administrator about role assignment. </h3>

            <div class="row">
                @Html.ActionLink("Home", "_Index", "Trash", new { area = "" }, new { @class = "btn btn-default" })
            </div>
        }
    </center>
</body>

